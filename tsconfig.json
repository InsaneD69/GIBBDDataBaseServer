{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES6",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
      }
}